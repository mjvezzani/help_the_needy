<h2>People in Need</h2>
<div class="row">
	<div class="large-12 columns">
		<table>
			<thead>
				<tr>
					<th>Name</th>
					<th>Age</th>
					<th>Address</th>
					<th>Comments</th>
					<th>Organization</th>
				</tr>
			</thead>
			<tbody>
				<% for np in @needy_people %>
				<tr>
					<th><%= np.name %></th>
					<th><%= np.age %></th>
					<th><%= np.address %></th>
					<th><%= np.comments %></th>
					<th><%= np.organization %></th>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>